{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    // https://github.com/microsoft/TypeScript/issues/45995
    "useDefineForClassFields": false
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
  ]
}